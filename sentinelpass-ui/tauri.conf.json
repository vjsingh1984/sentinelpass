{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SentinelPass",
  "version": "0.1.0",
  "identifier": "com.sentinelpass.app",
  "build": {
    "beforeDevCommand": "npm run web:build",
    "beforeBuildCommand": "npm run web:build",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "SentinelPass",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:*; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';",
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default capabilities for the main window",
          "windows": ["main"],
          "permissions": [
            "clipboard-manager:allow-write-text",
            "clipboard-manager:allow-read-text",
            "clipboard-manager:allow-clear",
            "shell:allow-open",
            "dialog:allow-ask",
            "dialog:allow-confirm",
            "dialog:allow-message",
            "dialog:allow-open",
            "dialog:allow-save"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "src-tauri/resources/bin/*"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

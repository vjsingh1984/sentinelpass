{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SentinelPass",
  "version": "0.1.0",
  "identifier": "com.sentinelpass.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "SentinelPass",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:*; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {},
    "clipboard-manager": {}
  }
}
